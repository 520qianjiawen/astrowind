---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Über RUMTOO',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget -->
  <Hero
    tagline="Über RUMTOO"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'RUMTOO Recycling-Maschinen Büro',
    }}
  >
    <Fragment slot="title">
      Innovative Lösungen für <br />
      <span class="text-accent dark:text-white highlight">Kunststoffrecycling</span>
    </Fragment>

    <Fragment slot="subtitle">
      Das RUMTOO Institut für Umweltwissenschaftliche Forschung und Entwicklung, bekannt als RUMTOO Recycling Machinery, ist ein führender Hersteller von Kunststoffrecyclingmaschinen. Wir spezialisieren uns auf PET-Flaschen- und PE-Folien-Waschlinien und bieten modernste Lösungen für die globale Recyclingindustrie.
    </Fragment>
  </Hero>

  <!-- Stats Widget -->
  <Stats
    title="Unser Einfluss"
    stats={[
      { title: 'Jahre Erfahrung', amount: '20+' },
      { title: 'Mitarbeiter', amount: '300+' },
      { title: 'Exportierte Länder', amount: '50+' },
      { title: 'Quadratmeter Anlage', amount: '50.000' },
    ]}
  />

  <!-- Features3 Widget -->
  <Features3
    title="Unsere Expertise"
    subtitle="Bei RUMTOO bieten wir umfassende Recyclinglösungen, die auf Ihre Bedürfnisse zugeschnitten sind. Unser Produktangebot umfasst:"
    columns={3}
    items={[
      {
        title: 'PET-Flaschen-Recycling',
        description: 'Komplette Waschlinien für effizientes PET-Flaschen-Recycling, von der Zerkleinerung bis zur Pelletierung.',
        icon: 'tabler:recycle',
      },
      {
        title: 'PE-Folien-Waschung',
        description: 'Spezialisierte Geräte zur Reinigung verschiedener Kunststofffolien, einschließlich LLDPE/LDPE und PP-Materialien.',
        icon: 'tabler:wash',
      },
      {
        title: 'Individuelle Lösungen',
        description: 'Maßgeschneiderte Maschinen und Anlagenkonfigurationen, um spezifische Recyclinganforderungen und Herausforderungen zu erfüllen.',
        icon: 'tabler:adjustments',
      },
    ]}
  />

  <!-- Steps2 Widget -->
  <Steps2
    title="Unser Prozess"
    subtitle="Bei RUMTOO sind wir stolz auf einen umfassenden und effizienten Ansatz für das Kunststoffrecycling. Unser Prozess kombiniert modernste Technologie mit jahrzehntelanger Branchenerfahrung, um erstklassige Ergebnisse zu erzielen:"
    items={[
      {
        title: 'Forschung & Entwicklung',
        description: 'Unser hauseigenes F&E-Zentrum innoviert und verbessert kontinuierlich unsere Recyclingtechnologien.',
      },
      {
        title: 'Qualitätsfertigung',
        description: 'Alle Maschinen sind CE- und ISO9001:2000-zertifiziert und gewährleisten höchste Präzision und Langlebigkeit.',
      },
      {
        title: 'Globaler Support',
        description: 'Umfassender After-Sales-Service und Unterstützung für Kunden weltweit.',
      },
    ]}
  />

  <!-- Features2 Widget -->
  <Features2
    title="Unsere Produktlinie"
    tagline="Umfassende Recyclinglösungen"
    columns={2}
    items={[
      {
        title: 'Größenreduzierung',
        description: 'Nassgranulatoren, Kunststoffgranulatoren, Industrielle Schredder',
      },
      {
        title: 'Trennung',
        description: 'Etikettentrenner, Langsam rotierende Trommeln, "Sink / Float"-Trennbehälter',
      },
      {
        title: 'Waschen',
        description: 'Reibungswäscher, Heißwäscher für PET-Flakes, Hochreibungswäscher',
      },
      {
        title: 'Trocknung',
        description: 'Entwässerungsmaschinen, Thermotrockner, Entwässerungsschneckenpressen',
      },
      {
        title: 'Pelletierung',
        description: 'Einschneckenextruder, Doppelschneckenextruder',
      },
    ]}
  />

  <!-- Features2 Widget -->
  <Features2
    title="Kontaktieren Sie uns"
    tagline="Nehmen Sie Kontakt auf"
    columns={2}
    items={[
      {
        title: 'Verkaufsanfragen',
        description: 'Telefon: +8618118115569<br>E-Mail: <a href="mailto:sales@rumtoo.com">sales@rumtoo.com</a>',
        icon: 'tabler:mail',
      },
      {
        title: 'Besuchen Sie uns',
        description: 'Suzhou, Provinz Jiangsu, VR China',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>