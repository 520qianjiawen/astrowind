---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About RUMTOO',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget -->
  <Hero
    tagline="About RUMTOO"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'RUMTOO Recycling Machinery Office',
    }}
  >
    <Fragment slot="title">
      Innovative Solutions for <br />
      <span class="text-accent dark:text-white highlight">Plastic Recycling</span>
    </Fragment>

    <Fragment slot="subtitle">
      RUMTOO Environmental Science Research & Development Institute, known as RUMTOO Recycling Machinery, is a leading manufacturer of plastic recycling machinery. We specialize in PET bottle and PE film washing lines, providing cutting-edge solutions for the global recycling industry.
    </Fragment>
  </Hero>

  <!-- Stats Widget -->
  <Stats
    title="Our Impact"
    stats={[
      { title: 'Years of Experience', amount: '20+' },
      { title: 'Employees', amount: '300+' },
      { title: 'Countries Exported', amount: '50+' },
      { title: 'Square Meters Facility', amount: '50,000' },
    ]}
  />

  <!-- Features3 Widget -->
  <Features3
    title="Our Expertise"
    subtitle="At RUMTOO, we offer comprehensive recycling solutions tailored to your needs. Our product range includes:"
    columns={3}
    items={[
      {
        title: 'PET Bottle Recycling',
        description: 'Complete washing lines for efficient PET bottle recycling, from size reduction to pelletizing.',
        icon: 'tabler:recycle',
      },
      {
        title: 'PE Film Washing',
        description: 'Specialized equipment for cleaning various plastic films, including LLDPE/LDPE and PP materials.',
        icon: 'tabler:wash',
      },
      {
        title: 'Custom Solutions',
        description: 'Tailored machinery and plant setups to meet specific recycling requirements and challenges.',
        icon: 'tabler:adjustments',
      },
    ]}
  />

  <!-- Steps2 Widget -->
  <Steps2
    title="Our Process"
    subtitle="At RUMTOO, we pride ourselves on a comprehensive and efficient approach to plastic recycling. Our process combines cutting-edge technology with decades of industry experience to deliver superior results:"
    items={[
      {
        title: 'Research & Development',
        description: 'Our in-house R&D center continuously innovates and improves our recycling technologies.',
      },
      {
        title: 'Quality Manufacturing',
        description: 'All machinery is CE & ISO9001:2000 certified, ensuring high precision and durability.',
      },
      {
        title: 'Global Support',
        description: 'Comprehensive after-sales service and support for clients worldwide.',
      },
    ]}
  />

  <!-- Features2 Widget -->
  <Features2
    title="Our Product Line"
    tagline="Comprehensive Recycling Solutions"
    columns={2}
    items={[
      {
        title: 'Size Reduction',
        description: 'Wet Granulators, Plastic Granulators, Industrial Shredders',
      },
      {
        title: 'Separation',
        description: 'Label Separators, Slow-Rotating Trommels, "Sink / Float" Separation Tanks',
      },
      {
        title: 'Washing',
        description: 'Friction Washers, Hot Washers for PET Flakes, High Friction Washers',
      },
      {
        title: 'Drying',
        description: 'Dewatering Machines, Thermal Dryers, Dewatering Screw Presses',
      },
      {
        title: 'Pelletizing',
        description: 'Single-Screw Extruders, Twin-Screw Extruders',
      },
    ]}
  />

  <!-- Features2 Widget -->
  <Features2
    title="Contact Us"
    tagline="Get in Touch"
    columns={2}
    items={[
      {
        title: 'Sales Inquiries',
        description: 'Phone: +8618118115569<br>Email: <a href="mailto:sales@rumtoo.com">sales@rumtoo.com</a>',
        icon: 'tabler:mail',
      },
      {
        title: 'Visit Us',
        description: 'Suzhou City, Jiangsu, P.R.China',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>