---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features from '~/components/widgets/Features.astro';

const metadata = {
 title: 'Einwellen-Schredder mit Schwenkarm | Rumtoo',
};
---

<Layout metadata={metadata}>
 <!-- Hero Widget ******************* -->
 <Hero
   tagline="Vielseitige Lösung für Kunststoffzerkleinerung"
   title="Einwellen-Schredder mit Schwenkarm"
   subtitle="Effiziente Zerkleinerung aller Kunststoffarten in großen Mengen"
   actions={[{ variant: 'primary', text: 'Angebot anfordern', href: '#inquire', icon: 'tabler:file-invoice' }]}
 >
   <Fragment slot="image">
     <link rel="stylesheet" href="https://cdn.plyr.io/3.7.2/plyr.css" />
     <video id="player" controls autoplay muted>
       <source src="https://image.525.hk/image/Single%20shaft%20shredder%20with%20swing%20arm.mp4" type="video/mp4" />
       Ihr Browser unterstützt das Video-Tag nicht.
     </video>
     <script src="https://cdn.plyr.io/3.7.2/plyr.polyfilled.js"></script>
     <script>
       document.addEventListener('DOMContentLoaded', () => {
         const player = new Plyr('#player');
       });
     </script>
   </Fragment>
 </Hero>

 <!-- Features Widget *************** -->
 <Features
   id="features"
   tagline="Hauptmerkmale"
   title="Warum unseren Einwellen-Schredder mit Schwenkarm wählen?"
   subtitle="Entdecken Sie die fortschrittlichen Funktionen, die unseren Schredder auszeichnen"
   items={[
     {
       title: 'Hydraulisch angetriebener Schwenkschieber',
       description: 'Schiebt Objekte effizient zu den Rotormessern für effektive Zerkleinerung. Das hydraulische System gewährleistet eine gleichmäßige Zuführung.',
       icon: 'tabler:separator-horizontal'
     },
     {
       title: 'Siebmasche am Auslass',
       description: 'Kontrolliert die Größe der Ausgabegranulate; anpassbare Siebmaschen für nachgeschaltete Prozesse verfügbar.',
       icon: 'tabler:ruler-2'
     },
     {
       title: 'Austauschbare Messer',
       description: 'Einfacher Messerwechsel zur Minimierung von Stillstandzeiten. Messer können durch Drehen der Seiten wiederverwendet werden.',
       icon: 'tabler:engine'
     },
     {
       title: 'Hochresistente Stahlmesser',
       description: 'Hergestellt aus SKD11 oder D2 für verlängerte Haltbarkeit.',
       icon: 'tabler:tool'
     },
     {
       title: 'SPS-Steuerungssystem',
       description: 'Siemens SPS für vereinfachte Bedienung und automatisierte Wartungsdiagnose.',
       icon: 'tabler:devices'
     },
     {
       title: 'Rotor-Umkehrfunktion',
       description: 'Kehrt den Rotor bei erkannter Blockade automatisch um und verhindert Schäden.',
       icon: 'tabler:arrow-back'
     },
     {
       title: 'Kühlsystem',
       description: 'Hält optimale Hydrauliköltemperatur für zuverlässige Leistung bei längerem Einsatz.',
       icon: 'tabler:thermometer'
     }
   ]}
 />

 <!-- Content Widget **************** -->
 <Content
   id="working-principle"
   title="Innovative Steuerung & Technologie"
   subtitle="Neueste Technologie für zentralisierte Steuerung und effiziente Leistung"
   items={[
     {
       title: 'Kompakter Siemens-Schaltschrank',
       description: 'Ermöglicht zentrale Steuerung des Schredders und seiner Peripheriegeräte—wie Förderbänder, Trenntechnik und Sekundärschredder.'
     },
     {
       title: 'Optionale Fernsteuerung',
       description: 'Bietet zusätzliche Flexibilität während Wartung und Betrieb.'
     }
   ]}
   image={{
     src: 'https://recycling.imgix.net/shredder/Single%20shaft%20shredder_Siemens%20PLC.webp?fit=crop&auto=format,compress&fm=webp',
     alt: 'Kompakter Siemens-Schaltschrank'
   }}
 />

 <!-- Content Widget **************** -->
 <Content
   id="applications"
   isReversed
   title="Anwendungen"
   subtitle="Geeignet für eine Vielzahl von Materialien und Industrien"
   items={[
     {
       title: 'Kunststoffe',
       description: 'Folien, Gewebesäcke, Fässer, Tonnen, Paletten, Rohre, Ausschuss.'
     },
     {
       title: 'Gummi',
       description: 'Platten, Matten, Autoreifen, Schläuche, Dichtungen.'
     },
     {
       title: 'Papierabfälle',
       description: 'Karton, Büropapier, Kraftpapier, Verpackungsmaterial.'
     },
     {
       title: 'Holz',
       description: 'Paletten, Bretter, Baumzweige.'
     },
     {
       title: 'Elektroschrott',
       description: 'Leiterplatten, Festplatten, Geräte, Kabel.'
     },
     {
       title: 'Textilien',
       description: 'Vorhänge, Kleidung, Teppiche, Lumpen.'
     }
   ]}
   image={{
     src: 'https://recycling.imgix.net/shredder/Single%20shaft%20shredder_Single-shaft%20Shredder%20with%20swing%20arm.webp?fit=crop&auto=format,compress&fm=webp',
     alt: 'Einwellen-Schredder Anwendungen'
   }}
 />

 <!-- CallToAction Widget *********** -->
 <CallToAction
   id="inquire"
   title="Bereit, Ihre Zerkleinerungskapazitäten zu verbessern?"
   subtitle="Kontaktieren Sie uns für aktuelle Preise und Lieferzeiten unseres Einwellen-Schredders mit Schwenkarm."
   actions={[
     {
       variant: 'primary',
       text: 'Angebot anfordern',
       href: '/contact',
       icon: 'tabler:file-invoice'
     }
   ]}
 />
</Layout>