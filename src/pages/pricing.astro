---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: "RUMTOO Recyclingmaschinen Preise",
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget -->
  <HeroText
    tagline="Preise"
    title="Transparente Preise für hochwertige Recyclingmaschinen"
    subtitle="RUMTOO bietet hochwertige PET-Flaschen- und PE-Folien-Waschlinien zu wettbewerbsfähigen und klaren Preisen."
  />

  <!-- Pricing Widget -->
  <Prices
    title="Unsere Preise"
    subtitle="Ehrliche Preise für erstklassige Recyclingmaschinen"
    prices={[
      {
        title: "PET-Flaschen-Waschlinie",
        subtitle: "Für kleine bis mittlere Anlagen",
        price: 250,
        period: "K - 320K",
        items: [
          { description: "Kapazität: 1.000-1.500 KG/H" },
          { description: "Beinhaltet Waschen, Trocknen und Pelletierung" },
          { description: "Hochwertige Maschinenkomponenten" },
          { description: "Detailliertes Angebot auf Anfrage" },
        ],
        callToAction: {
          target: "_blank",
          text: "Detailliertes Angebot einholen",
          href: "#",
        },
      },
      {
        title: "PE-Folien-Waschlinie",
        subtitle: "Optimal für großflächige Anlagen",
        price: 600,
        period: "K - 680K",
        items: [
          { description: "Kapazität: 1.000 KG/H" },
          { description: "Inklusive Wasserfiltersystem" },
          { description: "Hochwertige PP- oder PE-Pellets als Ausgang" },
          { description: "Anpassbar an Ihre Anforderungen" },
        ],
        callToAction: {
          target: "_blank",
          text: "Detailliertes Angebot einholen",
          href: "#",
        },
        hasRibbon: true,
        ribbonTitle: "Beliebt",
      },
    ]}
  />

  <!-- Features3 Widget -->
  <Features3
    title="Unser Engagement für Qualität"
    subtitle="Entdecken Sie den RUMTOO-Vorteil bei Recyclingmaschinen"
    columns={2}
    items={[
      {
        title: "Erstklassige Materialien",
        description: "Wir verzichten niemals auf Materialqualität, um Preise zu senken, und garantieren langlebige und effiziente Maschinen.",
        icon: "tabler:certificate",
      },
      {
        title: "Transparente Preise",
        description: "Klare und ehrliche Preise ohne versteckte Kosten oder Verhandlungsspielchen.",
        icon: "tabler:currency-dollar",
      },
      {
        title: "Anpassbare Lösungen",
        description: "Individuelle Waschsysteme, die auf Ihre spezifischen Recyclingbedürfnisse und Kapazitätsanforderungen abgestimmt sind.",
        icon: "tabler:adjustments",
      },
      {
        title: "Werksbesuche willkommen",
        description: "Wir laden Sie ein, unser Werk zu besuchen, nur 90 Minuten vom Flughafen Shanghai Pudong (PVG) entfernt.",
        icon: "tabler:building-factory",
      },
    ]}
  />

  <!-- FAQs Widget -->
  <FAQs
    title="Preise - Häufig gestellte Fragen"
    subtitle="Erhalten Sie Antworten auf häufige Fragen zu unseren Preisen und Maschinen."
    columns={1}
    items={[
      {
        title: "Warum sind Ihre Preise höher als bei einigen anderen Herstellern?",
        description:
          "Unsere Preise spiegeln unser Engagement wider, nur hochwertige Materialien zu verwenden und eine erstklassige Verarbeitung zu gewährleisten. Wir legen Wert auf effiziente und langlebige Maschinen für langfristigen Erfolg.",
      },
      {
        title: "Sind in Ihren Preisen Installation und Schulung enthalten?",
        description:
          "Unsere angegebenen Preise beziehen sich in der Regel auf die Maschinen selbst. Installation, Schulung und Versand werden normalerweise separat basierend auf Ihren spezifischen Anforderungen und Ihrem Standort angeboten.",
      },
      {
        title: "Kann ich ein individuelles Angebot für meine speziellen Bedürfnisse erhalten?",
        description:
          "Natürlich! Kontaktieren Sie unser Verkaufsteam mit Ihren spezifischen Anforderungen, und wir erstellen ein detailliertes, individuelles Angebot für Ihr Recyclingprojekt.",
      },
      {
        title: "Bieten Sie Finanzierungsmöglichkeiten an?",
        description:
          "Während wir keine direkte Finanzierung anbieten, können wir vertrauenswürdige Partner empfehlen, die Finanzierungslösungen für den Kauf von Industriemaschinen anbieten.",
      },
    ]}
  />

  <!-- CallToAction Widget -->
  <CallToAction
    title="Bereit, Ihre Recyclingprozesse zu verbessern?"
    subtitle="Kontaktieren Sie uns noch heute für ein detailliertes Angebot und besprechen Sie, wie RUMTOO Ihre spezifischen Anforderungen an Recyclingmaschinen erfüllen kann."
    actions={[
      {
        variant: "primary",
        text: "Ein Angebot einholen",
        href: "/contact",
      },
      {
        variant: "secondary",
        text: "Mehr erfahren",
        href: "/about",
      },
    ]}
  />
</Layout>