---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: "RUMTOO Recycling Machinery Pricing",
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget -->
  <HeroText
    tagline="Pricing"
    title="Transparent Pricing for Quality Recycling Machinery"
    subtitle="RUMTOO offers high-quality PET bottle and PE film washing lines at competitive, upfront prices."
  />

  <!-- Pricing Widget -->
  <Prices
    title="Our Pricing"
    subtitle="Honest pricing for top-notch recycling machinery"
    prices={[
      {
        title: "PET Bottle Washing Line",
        subtitle: "For small to medium operations",
        price: 250,
        period: "K - 320K",
        items: [
          { description: "Capacity: 1,000-1,500 KG/H" },
          { description: "Includes washing, drying, and pelletizing" },
          { description: "High-quality machinery components" },
          { description: "Detailed quotation available" },
        ],
        callToAction: {
          target: "_blank",
          text: "Get detailed quote",
          href: "#",
        },
      },
      {
        title: "PE Film Washing Line",
        subtitle: "Optimal for large-scale operations",
        price: 600,
        period: "K - 680K",
        items: [
          { description: "Capacity: 1,000 KG/H" },
          { description: "Includes water filtration system" },
          { description: "High-quality PP or PE pellets output" },
          { description: "Customizable based on requirements" },
        ],
        callToAction: {
          target: "_blank",
          text: "Get detailed quote",
          href: "#",
        },
        hasRibbon: true,
        ribbonTitle: "popular",
      },
    ]}
  />

  <!-- Features3 Widget -->
  <Features3
    title="Our Commitment to Quality"
    subtitle="Discover the RUMTOO advantage in recycling machinery"
    columns={2}
    items={[
      {
        title: "Top-Notch Materials",
        description: "We never compromise on material quality to reduce prices, ensuring durable and efficient machinery.",
        icon: "tabler:certificate",
      },
      {
        title: "Transparent Pricing",
        description: "Upfront, honest pricing without hidden costs or negotiation games.",
        icon: "tabler:currency-dollar",
      },
      {
        title: "Customizable Solutions",
        description: "Tailored washing plants to meet your specific recycling needs and capacity requirements.",
        icon: "tabler:adjustments",
      },
      {
        title: "Factory Visits Welcome",
        description: "We invite you to visit our factory, just 90 minutes from Shanghai Pudong Airport (PVG).",
        icon: "tabler:building-factory",
      },
    ]}
  />

  <!-- FAQs Widget -->
  <FAQs
    title="Pricing FAQs"
    subtitle="Get answers to common questions about our pricing and machinery."
    columns={1}
    items={[
      {
        title: "Why are your prices higher than some other manufacturers?",
        description:
          "Our prices reflect our commitment to using only high-grade materials and maintaining superior workmanship. We believe in providing machinery that is both efficient and durable for long-term success.",
      },
      {
        title: "Do your prices include installation and training?",
        description:
          "Our quoted prices typically cover the machinery itself. Installation, training, and shipping are usually quoted separately based on your specific requirements and location.",
      },
      {
        title: "Can I get a customized quote for my specific needs?",
        description:
          "Absolutely! Contact our sales team with your specific requirements, and we'll provide a detailed, customized quote for your recycling project.",
      },
      {
        title: "Do you offer financing options?",
        description:
          "While we don't provide direct financing, we can recommend trusted partners who offer financing solutions for industrial machinery purchases.",
      },
    ]}
  />

  <!-- CallToAction Widget -->
  <CallToAction
    title="Ready to upgrade your recycling operations?"
    subtitle="Contact us today for a detailed quote and to discuss how RUMTOO can meet your specific recycling machinery needs."
    actions={[
      {
        variant: "primary",
        text: "Get a Quote",
        href: "/contact",
      },
      {
        variant: "secondary",
        text: "Learn More",
        href: "/about",
      },
    ]}
  />
</Layout>