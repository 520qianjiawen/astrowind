---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
 title: 'Hartkunststoff-Recyclinganlagen für HDPE, PP, PS Kunststoffe',
};
---

<Layout metadata={metadata}>
 <!-- Hero Widget -->
 <Hero
   tagline="Hartkunststoff-Recyclinganlagen"
   title="Effiziente Recyclinglösungen für HDPE, PP und PS Kunststoffe"
   subtitle="Unsere Hartkunststoff-Recyclinganlage bietet eine schnelle und einfache Lösung für das Recycling verschmutzter Hartkunststoffe wie HDPE-Flaschen, Rohre und mehr. Mit Kapazitäten von 500 kg/h bis 2000 kg/h sind unsere Lösungen individuell auf Ihre Bedürfnisse anpassbar."
   actions={[{ variant: 'primary', target: '_blank', text: 'Angebot anfordern', href: '/contact' }]}
 >
   <Fragment slot="image">
     <link rel="stylesheet" href="https://cdn.plyr.io/3.7.2/plyr.css" />
     <video id="player" controls autoplay muted>
       <source src="https://video.525.hk/Plastic%20Rigid%20Plastic%20Recycling%20Washing%20Line.mp4" type="video/mp4">
       Ihr Browser unterstützt das Video-Tag nicht.
     </video>
     <script src="https://cdn.plyr.io/3.7.2/plyr.polyfilled.js"></script>
     <script>
       document.addEventListener('DOMContentLoaded', () => {
         const player = new Plyr('#player');
       });
     </script>
   </Fragment>
 </Hero>

 <!-- Features2 Widget ************** -->
 <Features2
   title="Funktionsprinzip"
   subtitle="Erfahren Sie, wie unsere Recyclinglinien Hartkunststoffe effizient verarbeiten."
   columns={3}
   items={[
     {
       title: 'Ballenöffner',
       description: 'Öffnet Materialballen für einen gleichmäßigen und kontinuierlichen Materialfluss.',
     },
     {
       title: 'Kunststoff-Schredder',
       description: 'Zerkleinert sperrige Kunststoffe in große Stücke für die weitere Verarbeitung.',
     },
     {
       title: 'Kunststoff-Granulator',
       description: 'Reduziert die Kunststoffgröße nach dem Schreddern für effizientes Waschen und Reinigen.',
     },
     {
       title: 'Friktionsschraubenwäscher',
       description: 'Reinigt und transportiert Materialien während der Entfernung von Verunreinigungen.',
     },
     {
       title: 'Schwimm-Sink-Trenntank',
       description: 'Trennt Schmutz, Steine und Metalle von Kunststoffmaterialien.',
     },
     {
       title: 'Thermisches Trocknungssystem',
       description: 'Entfernt Feuchtigkeit aus gereinigtem Kunststoff auf unter 3%.',
     },
   ]}
 />

 <!-- Content Widget **************** -->
 <Content
   isReversed
   items={[
     {
       title: 'PP-Mahlgut',
       description: 'Verwendet in Kunststoffstühlen, Körben und Flaschendeckeln aufgrund seiner Haltbarkeit und Festigkeit.',
     },
     {
       title: 'HDPE-Mahlgut',
       description: 'Häufig in Behältern, Rohren und Flaschen zu finden wegen seiner Schlagfestigkeit und chemischen Beständigkeit.',
     },
     {
       title: 'PVC-Mahlgut',
       description: 'Verwendet in Rohren, Fensterrahmen und Bodenbelägen wegen seiner Haltbarkeit und Anpassungsfähigkeit.',
     },
     {
       title: 'ABS-Mahlgut',
       description: 'Findet sich in Autoteilen und Elektronikgehäusen aufgrund seiner Zähigkeit und Oberflächenbeschaffenheit.',
     },
     {
       title: 'PET-Mahlgut',
       description: 'Weit verbreitet in Flaschen und Verpackungen wegen seiner Festigkeit und Klarheit, ideal für die Frischhaltung.',
     },
   ]}
   image={{
     src: 'https://recycling.imgix.net/material/PVC%20Pipe.jpg?w=768&h=768&fit=crop&auto=format&fm=webp',
     alt: 'PVC-Rohrmaterial',
   }}
 >
   <Fragment slot="content">
     <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Zusätzliche Informationen</h3>
   </Fragment>
 </Content>

 <!-- Content Widget **************** -->
 <Content
   isAfterContent
   items={[
     {
       title: 'Schneckenförderer',
       description: 'Fördert und filtert Materialien während der Sedimentreinigung mit hoher Haltbarkeit.',
     },
     {
       title: 'Nass-Kunststoff-Granulator',
       description: 'Effizientes Schneiden und Vorreinigen von Kunststoffflaschen und Hartmaterialien mit anpassbaren Klingenoptionen.',
     },
     {
       title: 'Friktionswäscher',
       description: 'Bietet gründliche Reinigung von Kunststoffmaterialien durch friktionsbasierte Reinigung und Wasser.',
     },
     {
       title: 'Schwimmtrenntank',
       description: 'Trennt PP- und PE-Kunststoffe von Verunreinigungen bei gleichzeitiger Materialreinigung.',
     },
     {
       title: 'Heißwäscher',
       description: 'Entfernt Öle und hartnäckige Verunreinigungen von PET- und HDPE-Flakes durch heiße chemische Bäder.',
     },
     {
       title: 'Zentrifugaltrockner',
       description: 'Entfernt Feuchtigkeit aus Kunststoff-Mahlgut durch Hochgeschwindigkeitsrotation, reduziert den Feuchtigkeitsgehalt um 20-30%.',
     },
     {
       title: 'Thermaltrockner',
       description: 'Verwendet Heißluft zur Feuchtigkeitsreduzierung auf unter 3%, ideal für die Endverarbeitung.',
     },
     {
       title: 'Zickzack-Luftklassierer',
       description: 'Trennt leichte Verunreinigungen wie Etiketten und bietet teilweise Trocknung für PET-Flaschen-Recyclinglinien.',
     },
   ]}
   image={{
     src: 'https://recycling.imgix.net/material/rigid%20plastic.jpg?w=768&h=768&fit=crop&auto=format&fm=webp',
     alt: 'Hartkunststoff',
   }}
 >
   <Fragment slot="content">
     <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Hauptkomponenten</h3>
   </Fragment>
 </Content>

 <!-- 新增的图片展示模块 -->
 <section class="py-16">
   <div class="container mx-auto px-4">
     <h2 class="text-3xl font-bold text-center mb-8">Recyclingprozess und Output</h2>
     <p class="text-center mb-12">Vom Rohmaterial zum Endprodukt: Sehen Sie unsere Recyclinglinie in Aktion</p>
     
     <div class="flex flex-col items-center">
       <div class="main-image mb-8">
         <img id="mainImage" src="https://video.525.hk/equipment/Rigid%20Plastic%20Washing%20Line%20For%20PP%2C%20HDPE%2C%20PVC.webp" alt="Hartkunststoff-Recyclinganlagen für HDPE, PP, PS Kunststoffe" class="w-full h-auto rounded-lg shadow-lg">
       </div>
       <div class="thumbnails flex justify-center space-x-4 overflow-x-auto w-full">
         <img src="https://video.525.hk/equipment/Sink%20Float%20Separation%20Tank.webp" alt="Schwimmtrenntank" class="thumbnail w-32 h-32 object-cover rounded-lg shadow-md cursor-pointer">
         <img src="https://video.525.hk/equipment/Friction%20Washer.webp" alt="Friktionswäscher" class="thumbnail w-32 h-32 object-cover rounded-lg shadow-md cursor-pointer">
         <img src="https://video.525.hk/equipment/Wet%20Crusher.webp" alt="Nass-Kunststoff-Granulator" class="thumbnail w-32 h-32 object-cover rounded-lg shadow-md cursor-pointer">
         <img src="https://video.525.hk/equipment/Centrifugal%20Dryer%20Dewatering.webp" alt="Zentrifugaltrockner" class="thumbnail w-32 h-32 object-cover rounded-lg shadow-md cursor-pointer">
         <img src="https://video.525.hk/equipment/Zig-Zag%20Air%20Classifier.webp" alt="Zickzack-Luftklassierer" class="thumbnail w-32 h-32 object-cover rounded-lg shadow-md cursor-pointer">
       </div>
     </div>
   </div>
 </section>

 <!-- Testimonials Widget *********** -->
 <Testimonials
   title="Kundenfeedback"
   testimonials={[
     {
       testimonial: `Unsere Anlage hat seit der Integration der Hartkunststoff-Recyclinglinien eine enorme Effizienzsteigerung erfahren. Die Endproduktqualität ist durchgehend hoch.`,
       name: 'John Doe',
       job: 'Werksleiter',
       image: {
         src: 'https://images.unsplash.com/photo-1618835962148-cf177563c6c0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=930&q=80',
         alt: 'John Doe',
       },
     },
     {
       testimonial: `Die Anpassungsmöglichkeiten erlaubten es uns, die Recyclinglinien perfekt auf die Bedürfnisse unserer Anlage abzustimmen. Wir könnten mit den Ergebnissen nicht zufriedener sein.`,
       name: 'Jane Smith',
       job: 'Betriebsleiterin',
       image: {
         src: 'https://images.unsplash.com/photo-1561406636-b80293969660?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
         alt: 'Jane Smith',
       },
     },
     {
       testimonial: `Die Technologie und der Kundenservice waren hervorragend. Wir haben den Wasser- und Energieverbrauch deutlich reduziert und gleichzeitig die Produktion gesteigert.`,
       name: 'Mark Johnson',
       job: 'Nachhaltigkeitsdirektor',
       image: {
         src: 'https://images.unsplash.com/photo-1545167622-3a6ac756afa4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=824&q=80',
         alt: 'Mark Johnson',
       },
     },
   ]}
   callToAction={{
     target: '_blank',
     text: 'Weitere Referenzen...',
     href: '#',
     icon: 'tabler:chevron-right',
   }}
 />

 <!-- CallToAction Widget *********** -->
 <CallToAction
   actions={[
     {
       variant: 'primary',
       text: 'Kontaktieren Sie uns',
       href: '/contact',
     },
   ]}
   title="Verbessern Sie Ihr Kunststoffrecycling noch heute"
   subtitle="Bereit, Ihre Recyclingprozesse auf die nächste Stufe zu heben? Kontaktieren Sie uns für maßgeschneiderte Lösungen nach Ihren Bedürfnissen."
 />
</Layout>

<script>
 document.addEventListener('DOMContentLoaded', (event) => {
   const mainImage = document.getElementById('mainImage');
   const thumbnails = document.querySelectorAll('.thumbnail');

   thumbnails.forEach(thumbnail => {
     thumbnail.addEventListener('click', function() {
       mainImage.src = this.src.replace('w=300', 'w=1740');
       mainImage.alt = this.alt;
       
       thumbnails.forEach(thumb => thumb.classList.remove('ring-2', 'ring-blue-500'));
       this.classList.add('ring-2', 'ring-blue-500');
     });
   });
 });
</script>